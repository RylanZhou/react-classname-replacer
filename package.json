{
  "name": "react-classname-replacer",
  "displayName": "react-classname-replacer",
  "description": "Replaces regular react string classname with css module classname",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/index.js",
  "contributes": {
    "commands": [
      {
        "command": "react-classname-replacer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "react-classname-replacer.replace",
        "title": "Replace classname"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "react-classname-replacer.replace",
          "group": "1_modification@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "react-classname-replacer.replace",
        "key": "Ctrl+k r",
        "mac": "Cmd+k r",
        "when": "editorFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
